{
  "variables": {
    "aws_access_key_id": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_access_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_account_id": "4819-1673-9571",
    "s3_bucket": "balanced-amis",
    "x509_cert_path": "{{pwd}}/balanced-aws.crt",
    "x509_key_path": "{{pwd}}/balanced-aws.key"
  },
  "builders": [
    {
      "type": "amazon-instance",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "account_id": "{{user `aws_account_id`}}",
      "s3_bucket": "{{user `s3_bucket`}}",
      "region": "us-east-1",
      "source_ami": "ami-23447f4a",
      "instance_type": "m1.small",
      "ssh_username": "ubuntu",
      "ami_name": "Balanced Ubuntu 12.04 (instance store) {{isotime | clean_ami_name}}",
      "x509_cert_path": "{{user `x509_cert_path`}}",
      "x509_key_path": "{{user `x509_key_path`}}",
      "bundle_upload_command": "sudo EC2_AMITOOL_HOME=/opt/ec2-ami-tools -n /opt/ec2-ami-tools/bin/ec2-upload-bundle -b {{.BucketName}} -m {{.ManifestPath}} -a {{.AccessKey}} -s {{.SecretKey}} -d {{.BundleDirectory}} --batch --location {{.Region}} --retry",
      "bundle_vol_command": "sudo EC2_AMITOOL_HOME=/opt/ec2-ami-tools -n /opt/ec2-ami-tools/bin/ec2-bundle-vol -k {{.KeyPath}} -u {{.AccountId}} -c {{.CertPath}} -r {{.Architecture}} -e {{.PrivatePath}}/* -d {{.Destination}} -p {{.Prefix}} --batch --no-filter"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -e -x",
        "sleep 60 # Wait for init scripts et al to finish",
        "sudo apt-get update -y",
        "sudo apt-get install -y unzip",
        "curl -L https://www.opscode.com/chef/install.sh | sudo bash",
        "curl -o /tmp/ec2-ami-tools.zip http://s3.amazonaws.com/ec2-downloads/ec2-ami-tools.zip",
        "unzip -d /tmp /tmp/ec2-ami-tools.zip",
        "rm /tmp/ec2-ami-tools.zip",
        "mkdir /opt/ec2-ami-tools",
        "mv /tmp/ec2-ami-tools*/* /opt/ec2-ami-tools"
      ]
    }
  ]
}
